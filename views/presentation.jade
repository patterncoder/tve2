extends layout

block content
  div#impress
    div#bored.step.slide(data-x="-1000", data-y="-1500")
      h1 Running restaurants is hard.
    div
    div.step.slide(data-x="0", data-y="-1500")
      h1 There are a lot of moving parts.
    div.step.slide(data-x="1000", data-y="-1500")
      h1 And the rules keep changing:
        ul
          li Minimum Wage
          li Mandatory Sick Pay
          li Healthcare
          li Worker's compensation insurance
    div#title.step(data-x="0", data-y="0" data-scale="4")
      span.try Then You shoud try
      h1 IMpress.js<sup>*</sup>
      span.footnote <sup>*</sup> no ryhme intended
    div.step(data-x="2825", data-y="2325", data-rotate="0", data-z="-3000", data-scale="1")
      h1 Another title
        p antoher paragraph
    div#its.step(data-x="850", data-y="3000", data-rotate="90" data-scale="5")
      p It's a <strong>presentation tool</strong> <br/>
        | inpired by the idea of <a href="http://prezi.com">Prezi.com</a> <br/>
        | and based on the power of css3 transitions.
    div#big.step(data-x="3500", data-y="2100", data-rotate="180",  data-scale="6")
      p visualize your <b>big</b>
        span.thoughts Thougths
    div#tiny.step(data-x="2825", data-y="2325", data-rotate="90", data-z="-3000", data-scale="1")
      p and <b>tiny</b> ideas
    


